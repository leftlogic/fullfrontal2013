 <li {{#if date}}data-date="{{date}}"{{/if}} class="session{{#if background}} open bg-{{background}}{{/if}}"{{#unless break}} id="{{slug}}"{{/unless}}>
  <div class="session-wrapper">
  {{#if break}}
    <header class="break">
      <div class="time">{{start}} &mdash; {{end}}</div>
      <h3 class="title" role="heading" aria-level="3">{{#noorphan title}}{{.}}{{/noorphan}}</h3>
    </header>
  {{/if}}

  {{#unless break}}
    <header class="session-header">
      {{#if start}}<div class="time">{{start}} &mdash; {{end}}</div>{{/if}}
      <div class="title-wrapper">
        <h3 class="title" role="heading" aria-level="3">{{#noorphan title}}{{.}}{{/noorphan}}</h3>
        {{#if speaker.name}}<div class="speaker">{{speaker.name}}</div>{{/if}}
      </div>
    <hr>
    </header>
    <div class="session-body">
      <div class="veil">
        <div class="description-wrapper">
          {{#if description}}
            {{#markdown}}{{description}}{{/markdown}}
          {{/if}}

          {{#if bio}}
          <div class="bio">
            {{#markdown}}{{bio}}{{/markdown}}
          </div>
          {{/if}}

        </div>

        {{#if speaker.photo}}
        <div class="mugshot" {{#if speaker.alt}}title="{{speaker.alt}}" {{/if}}style="background-image: url(/images/speakers/{{speaker.photo}})">
          <img src="/images/speakers/{{speaker.photo}}">
        </div>
        {{/if}}

        {{#if links}}
        <div class="links-wrapper">
          <div class="links">

            {{#if slides}}
              <a class="button" href="{{slides}}">Slides</a>
            {{/if}}

            {{#if audio}}
              <a class="button" href="{{audio}}">Audio</a>
            {{/if}}

            {{#if video}}
              <a class="button" href="{{video}}">Video</a>
            {{/if}}

            <hr>
            {{#each links}}
              {{#link this}}.{{/link}}
            {{/each}}

          </div>
        </div>
      </div>
      {{/if}}
    </div>
  {{/unless}}
  </div>
</li>